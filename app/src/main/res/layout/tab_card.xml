<?xml version="1.0" encoding="utf-8"?><!-- merge does not propagate it's parameters to the custom view class
     so we set them in the class inself-->
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/thumbnail"
        android:layout_width="@dimen/tab_thumbnail_width"
        android:layout_height="@dimen/tab_thumbnail_height" />

    <TextView
        android:id="@+id/tab_title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/tab_thumbnail_title_height"
        android:textSize="@dimen/tab_thumbnail_title_text_size"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/thumbnail" />
</merge>